{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "NMS Mod Manager",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": { "all": true },
      "fs": { "all": true, "scope": ["**"] },
      "path": { "all": true },
      "shell": { "open": true },
      "window": { "all": true }
    },
    "bundle": {
      "active": true,
      "identifier": "com.Syzzle.nmsmodmanager",
      "icon": [ "icons/32x32.png", "icons/128x128.png", "icons/icon.ico" ],
      "targets": "all",
      "resources": [
        "locales/*"
      ]
    },
    "security": { "csp": null },
    "updater": { "active": false },
    "windows": [
      {
        "title": "NMS Mod Manager",
        "width": 800,
        "height": 900,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "minWidth": 670, 
        "minHeight": 663,
        "maxWidth": 1920,
        "maxHeight": 960
      }
    ]
  }
}